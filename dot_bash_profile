export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CONFIG_HOME="$HOME/.local/etc"
export XDG_STATE_HOME="$HOME/.local/var/lib"
export XDG_CACHE_HOME="$HOME/.local/var/cache"

export BIN_HOME="$HOME/.local/bin"
export OPT_HOME="$HOME/.local/opt"

export VOLTA_HOME="$HOME/.volta"
export STARSHIP_CONFIG="$HOME/.local/etc/starship/config.toml"
export WAKATIME_HOME="$HOME/.local/opt/wakatime"

export PATH="$BIN_HOME:$VOLTA_HOME/bin:$PATH"

export EDITOR="vim"
export GPG_TTY=$(tty)

if [[ -f ~/.bashrc ]] ; then
	. ~/.bashrc
fi
